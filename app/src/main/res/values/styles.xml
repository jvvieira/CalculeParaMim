<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="appFormTitle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>7
        <item name="android:textSize">25dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="appFormSubTitle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>7
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="Bloco">
        <item name="android:background">@color/colorBG</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="appResult">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>7
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

</resources>
